<a href="/" class="btn btn-secondary home" role="button">Home</a>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box boxContent">
          <% newListItems.forEach(function(item){ %>
    <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value=<%=item._id%> onChange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div>
        <input type="hidden" name="listName" value=<%=listTitle%>>
            </form>
        <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" class="create-input" placeholder="New Item" autocomplete="off">
        <button type="submit" class="button" name="list" value=<%=listTitle%>>+</button>
      </form>
  </div>

